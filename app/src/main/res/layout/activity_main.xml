<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degrado"
    android:gravity="center"
    android:orientation="vertical"
    app:srcCompat="@drawable/twiter"
    tools:context="org.tensorflow.lite.examples.detection.MainActivity">



    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="265dp"
        android:layout_height="244dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo3" />

    <Button
        android:id="@+id/face"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_1"
        android:text="@string/faceString" />

    <Button
        android:id="@+id/hand"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_1"
        android:text="@string/handString" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/instagram"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="195dp"
        android:layout_height="42dp"
        android:gravity="center"
        android:text="#Face_RecognitionRD" />




</LinearLayout>