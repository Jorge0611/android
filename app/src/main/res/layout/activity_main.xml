<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degrado"
    android:gravity="center"
    android:orientation="vertical"
    app:srcCompat="@drawable/twiter"
    tools:context="org.tensorflow.lite.examples.detection.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="265dp"
        android:layout_height="245dp"
        android:layout_margin="60dp"
        android:src="@drawable/faceapp" />

    <Button
        android:id="@+id/face"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_1"
        android:text="@string/faceString" />

    <Button
        android:id="@+id/hand"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_1"
        android:text="@string/handString" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="230dp"
        android:layout_height="103dp"
        android:layout_margin="1px"
        android:src="@drawable/facebook_instagram_twitter_png_3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="195dp"
        android:layout_height="42dp"
        android:gravity="center"
        android:text="#Face_RecognitionRD" />


</LinearLayout>